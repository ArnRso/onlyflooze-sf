{% extends 'base.html.twig' %}

{% block title %}Mes Transactions - OnlyFlooze{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ importmap('transaction-pagination') }}
    {{ importmap('transaction-management') }}
{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 text-primary">üí∞ Mes Transactions</h1>
            <div class="btn-group">
                <button class="btn btn-outline-primary" type="button" data-bs-toggle="collapse"
                        data-bs-target="#searchForm">
                    <i class="fas fa-search"></i> Rechercher
                </button>
                <a href="{{ path('app_recurring_transaction_index') }}" class="btn btn-outline-secondary">
                    <i class="fas fa-repeat"></i> Transactions r√©currentes
                </a>
                <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Nouvelle transaction
                </a>
            </div>
        </div>

        <!-- Formulaire de recherche repliable -->
        <div
            class="collapse {% if app.request.query.count > 0 and app.request.query.get('page') is empty %}show{% endif %}"
            id="searchForm">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-search"></i> Rechercher des transactions
                    </h5>
                </div>
                <div class="card-body">
                    <form method="GET" action="{{ path('app_transaction_index') }}">
                        <div class="row">
                            <div class="col-md-4 mb-3">
                                <label for="label" class="form-label">Libell√©</label>
                                <input type="text" class="form-control" id="label" name="label"
                                       value="{{ app.request.query.get('label', '') }}"
                                       placeholder="Rechercher dans les libell√©s...">
                            </div>
                            <div class="col-md-2 mb-3">
                                <label for="minAmount" class="form-label">Montant min</label>
                                <input type="number" step="0.01" class="form-control"
                                       id="minAmount" name="minAmount" placeholder="Ex: -100"
                                       value="{{ app.request.query.get('minAmount', '') }}">
                            </div>
                            <div class="col-md-2 mb-3">
                                <label for="maxAmount" class="form-label">Montant max</label>
                                <input type="number" step="0.01" class="form-control"
                                       id="maxAmount" name="maxAmount" placeholder="Ex: 100"
                                       value="{{ app.request.query.get('maxAmount', '') }}">
                            </div>
                            <div class="col-md-2 mb-3">
                                <label for="startDate" class="form-label">Date d√©but</label>
                                <input type="date" class="form-control" id="startDate" name="startDate"
                                       value="{{ app.request.query.get('startDate', '') }}">
                            </div>
                            <div class="col-md-2 mb-3">
                                <label for="endDate" class="form-label">Date fin</label>
                                <input type="date" class="form-control" id="endDate" name="endDate"
                                       value="{{ app.request.query.get('endDate', '') }}">
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <label for="budgetMonth" class="form-label">Mois budg√©taire</label>
                                <input type="text" class="form-control" id="budgetMonth"
                                       name="budgetMonth" placeholder="Ex: 2024-01"
                                       value="{{ app.request.query.get('budgetMonth', '') }}">
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="hasRecurringTransaction" class="form-label">Transaction r√©currente</label>
                                <select class="form-select" id="hasRecurringTransaction"
                                        name="hasRecurringTransaction">
                                    <option value="">Toutes</option>
                                    <option value="no"
                                            {% if app.request.query.get('hasRecurringTransaction') == 'no' %}selected{% endif %}>
                                        Sans transaction r√©currente
                                    </option>
                                    <option value="yes"
                                            {% if app.request.query.get('hasRecurringTransaction') == 'yes' %}selected{% endif %}>
                                        Avec transaction r√©currente
                                    </option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3">
                                <label for="limit" class="form-label">Transactions par page</label>
                                <select class="form-select" id="limit" name="limit">
                                    <option value="10"
                                            {% if app.request.query.get('limit', '20') == '10' %}selected{% endif %}>10
                                    </option>
                                    <option value="20"
                                            {% if app.request.query.get('limit', '20') == '20' %}selected{% endif %}>20
                                    </option>
                                    <option value="50"
                                            {% if app.request.query.get('limit', '20') == '50' %}selected{% endif %}>50
                                    </option>
                                    <option value="100"
                                            {% if app.request.query.get('limit', '20') == '100' %}selected{% endif %}>
                                        100
                                    </option>
                                </select>
                            </div>
                            <div class="col-md-3 mb-3 d-flex align-items-end">
                                <div class="w-100">
                                    <a href="{{ path('app_transaction_index') }}"
                                       class="btn btn-outline-secondary me-2">
                                        <i class="fas fa-eraser"></i> Effacer
                                    </a>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-search"></i> Rechercher
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <!-- Statistiques -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-primary">Total</h5>
                        <h3 class="{% if stats.total >= 0 %}text-success{% else %}text-danger{% endif %}">
                            {{ stats.total|number_format(2, ',', ' ') }}&nbsp;‚Ç¨
                        </h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-info">Transactions</h5>
                        <h3 class="text-dark">{{ stats.count }}</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-success">Entr√©es</h5>
                        <h3 class="text-success">{{ stats.positive_total|number_format(2, ',', ' ') }}&nbsp;‚Ç¨</h3>
                        <small class="text-muted">({{ stats.positive_count }} transactions)</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-danger">Sorties</h5>
                        <h3 class="text-danger">{{ stats.negative_total|number_format(2, ',', ' ') }}&nbsp;‚Ç¨</h3>
                        <small class="text-muted">({{ stats.negative_count }} transactions)</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Bouton d'attribution en masse (cach√© par d√©faut) -->
        <div id="bulk-actions" class="alert alert-primary d-none" role="alert">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-check-square"></i>
                    <span id="selected-count">0</span> transaction(s) s√©lectionn√©e(s)
                </div>
                <div>
                    <button type="button" class="btn btn-sm btn-outline-secondary me-2" id="clear-selection">
                        <i class="fas fa-times"></i> D√©s√©lectionner tout
                    </button>
                    <button type="button" class="btn btn-sm btn-success" data-bs-toggle="modal"
                            data-bs-target="#assignModal">
                        <i class="fas fa-tasks"></i> Attribuer √† une r√©currente
                    </button>
                </div>
            </div>
        </div>

        <!-- Liste des transactions -->
        {% if transactions.items|length > 0 %}
            <!-- Pagination du haut -->
            <div class="card mb-3">
                <div class="card-body py-2">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <small class="text-muted me-3">
                                {{ transactions.currentPageNumber }} / {{ transactions.pageCount }}
                                ({{ transactions.totalItemCount }} transactions)
                            </small>
                            <div class="d-flex align-items-center">
                                <label for="per-page" class="form-label me-2 mb-0 small">Par page:</label>
                                <select id="per-page" class="form-select form-select-sm" style="width: auto;">
                                    <option value="10" {{ app.request.query.get('limit') == '10' ? 'selected' : '' }}>
                                        10
                                    </option>
                                    <option
                                        value="20" {{ app.request.query.get('limit') == '20' or app.request.query.get('limit') is empty ? 'selected' : '' }}>
                                        20
                                    </option>
                                    <option value="50" {{ app.request.query.get('limit') == '50' ? 'selected' : '' }}>
                                        50
                                    </option>
                                    <option value="100" {{ app.request.query.get('limit') == '100' ? 'selected' : '' }}>
                                        100
                                    </option>
                                </select>
                            </div>
                        </div>
                        <div>
                            {{ knp_pagination_render(transactions) }}
                        </div>
                    </div>
                </div>
            </div>

            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Liste des transactions</h5>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="select-all">
                        <label class="form-check-label" for="select-all">
                            Tout s√©lectionner
                        </label>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                            <tr>
                                <th width="50">
                                    <i class="fas fa-check-square text-muted"></i>
                                </th>
                                <th>Date</th>
                                <th>Libell√©</th>
                                <th class="text-end">Montant</th>
                                <th>Mois budg√©taire</th>
                                <th>Transaction r√©currente</th>
                                <th>Tags</th>
                                <th>Informations</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for transaction in transactions.items %}
                                <tr>
                                    <td>
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox"
                                                   name="transaction_ids[]"
                                                   value="{{ transaction.id }}"
                                                   id="transaction_{{ transaction.id }}">
                                        </div>
                                    </td>
                                    <td>
                                        <small
                                            class="text-muted">{{ transaction.transactionDate|date('d/m/Y') }}</small>
                                    </td>
                                    <td>
                                        <strong>{{ transaction.label }}</strong>
                                        {% if transaction.info %}
                                            <br>
                                            <small class="text-muted">
                                                {{ transaction.info|slice(0, 80) }}{% if transaction.info|length > 80 %}...{% endif %}
                                            </small>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <span
                                            class="{% if transaction.amountAsFloat >= 0 %}text-success{% else %}text-danger{% endif %} fw-bold">
                                            {{ transaction.amount|number_format(2, ',', ' ') }}&nbsp;‚Ç¨
                                        </span>
                                    </td>
                                    <td>
                                        {% if transaction.budgetMonth %}
                                            <span class="badge bg-secondary">{{ transaction.budgetMonth }}</span>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if transaction.recurringTransaction %}
                                            <span class="badge bg-primary text-white">
                                                üîÑ {{ transaction.recurringTransaction.name }}
                                            </span>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if transaction.tags|length > 0 %}
                                            {% for tag in transaction.tags %}
                                                {% include 'components/tag.html.twig' with {
                                                    'tag': tag,
                                                    'size': 'sm',
                                                    'class': 'me-1 mb-1'
                                                } %}
                                            {% endfor %}
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if transaction.info %}
                                            <small
                                                class="text-muted">{{ transaction.info|slice(0, 50) }}{% if transaction.info|length > 50 %}...{% endif %}</small>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}"
                                               class="btn btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}"
                                               class="btn btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal{{ transaction.id }}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>

                                        <!-- Modal de suppression -->
                                        <div class="modal fade" id="deleteModal{{ transaction.id }}" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirmer la suppression</h5>
                                                        <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>√ätes-vous s√ªr de vouloir supprimer cette transaction ?</p>
                                                        <p class="fw-bold">{{ transaction.label }}
                                                            - {{ transaction.amount|number_format(2, ',', ' ') }}
                                                            &nbsp;‚Ç¨</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Annuler
                                                        </button>
                                                        <form method="post"
                                                              action="{{ path('app_transaction_delete', {'id': transaction.id}) }}"
                                                              style="display: inline;">
                                                            <input type="hidden" name="_token"
                                                                   value="{{ csrf_token('delete' ~ transaction.id) }}">
                                                            <button type="submit" class="btn btn-danger">Supprimer
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

                <!-- Pagination -->
                <div class="card-footer">
                    {{ knp_pagination_render(transactions) }}
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-receipt fs-1 text-muted"></i>
                </div>
                <h4 class="text-muted">Aucune transaction</h4>
                <p class="text-muted">Commencez par cr√©er votre premi√®re transaction !</p>
                <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Cr√©er une transaction
                </a>
            </div>
        {% endif %}
    </div>

    <!-- Modal d'attribution en masse -->
    <div class="modal fade" id="assignModal" tabindex="-1" aria-labelledby="assignModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <form method="POST" action="{{ path('app_transaction_assign_recurring') }}" id="assign-form">
                    <div class="modal-header">
                        <h5 class="modal-title" id="assignModalLabel">
                            <i class="fas fa-tasks"></i> Attribution en masse
                        </h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="_token" value="{{ csrf_token('assign_recurring') }}">

                        <!-- Inclure les crit√®res de recherche pour revenir aux m√™mes r√©sultats -->
                        {% for key, value in app.request.query.all %}
                            <input type="hidden" name="search_{{ key }}" value="{{ value }}">
                        {% endfor %}

                        <div class="alert alert-info">
                            <i class="fas fa-info-circle"></i>
                            <strong>Instructions :</strong> Vous √™tes sur le point d'attribuer <span
                                id="modal-selected-count">0</span> transaction(s) √† une transaction r√©currente.
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label for="recurring_transaction_id" class="form-label">Transaction r√©currente</label>
                                <select class="form-select" id="recurring_transaction_id"
                                        name="recurring_transaction_id" required
                                        onchange="toggleNewRecurringField(this)">
                                    <option value="">S√©lectionner une transaction r√©currente</option>
                                    {% for recurring in recurringTransactions %}
                                        <option value="{{ recurring.id }}">{{ recurring.name }}
                                            ({{ recurring.transactions|length }} transactions)
                                        </option>
                                    {% endfor %}
                                    <option value="new">‚ûï Cr√©er une nouvelle transaction r√©currente</option>
                                </select>
                            </div>
                            <div class="col-md-6 mb-3 d-none" id="new-recurring-name-group">
                                <label for="new_recurring_name" class="form-label">Nom de la nouvelle transaction
                                    r√©currente</label>
                                <input type="text" class="form-control" id="new_recurring_name"
                                       name="new_recurring_name" placeholder="Ex: Salaire mensuel">
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                        <button type="submit" class="btn btn-success">
                            <i class="fas fa-check"></i> Attribuer les transactions
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}
