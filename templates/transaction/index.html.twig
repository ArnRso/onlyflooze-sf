{% extends 'base.html.twig' %}

{% block title %}Mes Transactions - OnlyFlooze{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 text-primary">üí∞ Mes Transactions</h1>
            <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouvelle transaction
            </a>
        </div>

        <!-- Statistiques -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-primary">Total</h5>
                        <h3 class="{% if stats.total >= 0 %}text-success{% else %}text-danger{% endif %}">
                            {{ stats.total|number_format(2, ',', ' ') }}&nbsp;‚Ç¨
                        </h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-info">Transactions</h5>
                        <h3 class="text-dark">{{ stats.count }}</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-success">Entr√©es</h5>
                        <h3 class="text-success">{{ stats.positive_total|number_format(2, ',', ' ') }}&nbsp;‚Ç¨</h3>
                        <small class="text-muted">({{ stats.positive_count }} transactions)</small>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-danger">Sorties</h5>
                        <h3 class="text-danger">{{ stats.negative_total|number_format(2, ',', ' ') }}&nbsp;‚Ç¨</h3>
                        <small class="text-muted">({{ stats.negative_count }} transactions)</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Liste des transactions -->
        {% if transactions|length > 0 %}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Liste des transactions</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Libell√©</th>
                                <th class="text-end">Montant</th>
                                <th>Mois budg√©taire</th>
                                <th>Transaction r√©currente</th>
                                <th>Tags</th>
                                <th>Informations</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for transaction in transactions %}
                                <tr>
                                    <td>
                                        <small
                                            class="text-muted">{{ transaction.transactionDate|date('d/m/Y') }}</small>
                                    </td>
                                    <td>
                                        <strong>{{ transaction.label }}</strong>
                                    </td>
                                    <td class="text-end">
                                        <span
                                            class="{% if transaction.amountAsFloat >= 0 %}text-success{% else %}text-danger{% endif %} fw-bold">
                                            {{ transaction.amount|number_format(2, ',', ' ') }}&nbsp;‚Ç¨
                                        </span>
                                    </td>
                                    <td>
                                        {% if transaction.budgetMonth %}
                                            <span class="badge bg-secondary">{{ transaction.budgetMonth }}</span>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if transaction.recurringTransaction %}
                                            <a href="{{ path('app_recurring_transaction_show', {'id': transaction.recurringTransaction.id}) }}"
                                               class="badge bg-primary text-decoration-none"
                                               title="{{ transaction.recurringTransaction.name }}">
                                                üîÑ {{ transaction.recurringTransaction.name|slice(0, 15) }}{% if transaction.recurringTransaction.name|length > 15 %}...{% endif %}
                                            </a>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if transaction.tags|length > 0 %}
                                            {% for tag in transaction.tags %}
                                                {% include 'components/tag.html.twig' with {
                                                    'tag': tag,
                                                    'size': 'sm',
                                                    'class': 'me-1'
                                                } %}
                                            {% endfor %}
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if transaction.info %}
                                            <small
                                                class="text-muted">{{ transaction.info|slice(0, 50) }}{% if transaction.info|length > 50 %}...{% endif %}</small>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}"
                                               class="btn btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}"
                                               class="btn btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal{{ transaction.id }}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>

                                        <!-- Modal de suppression -->
                                        <div class="modal fade" id="deleteModal{{ transaction.id }}" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirmer la suppression</h5>
                                                        <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>√ätes-vous s√ªr de vouloir supprimer cette transaction ?</p>
                                                        <p class="fw-bold">{{ transaction.label }}
                                                            - {{ transaction.amount|number_format(2, ',', ' ') }}
                                                            &nbsp;‚Ç¨</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Annuler
                                                        </button>
                                                        <form method="post"
                                                              action="{{ path('app_transaction_delete', {'id': transaction.id}) }}"
                                                              style="display: inline;">
                                                            <input type="hidden" name="_token"
                                                                   value="{{ csrf_token('delete' ~ transaction.id) }}">
                                                            <button type="submit" class="btn btn-danger">Supprimer
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-receipt fs-1 text-muted"></i>
                </div>
                <h4 class="text-muted">Aucune transaction</h4>
                <p class="text-muted">Commencez par cr√©er votre premi√®re transaction !</p>
                <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Cr√©er une transaction
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
