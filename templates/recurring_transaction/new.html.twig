{% extends 'base.html.twig' %}

{% block title %}Nouvelle Transaction Récurrente - OnlyFlooze{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="row justify-content-center">
            <div class="col-md-8">
                <div class="card">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-plus text-primary"></i>
                            Nouvelle Transaction Récurrente
                        </h5>
                    </div>
                    <div class="card-body">
                        {{ form_start(form) }}

                        <div class="mb-3">
                            {{ form_label(form.name) }}
                            {{ form_widget(form.name) }}
                            {{ form_errors(form.name) }}
                            <div class="form-text">
                                Exemples : Facture électricité, Salaire, Crédit maison, Abonnement Netflix, etc.
                            </div>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="{{ path('app_recurring_transaction_index') }}" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Retour
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Créer
                            </button>
                        </div>

                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
