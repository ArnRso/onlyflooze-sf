{% extends 'base.html.twig' %}

{% block title %}{{ recurring_transaction.name }} - OnlyFlooze{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 text-primary">üîÑ {{ recurring_transaction.name }}</h1>
            <div>
                <a href="{{ path('app_recurring_transaction_edit', {'id': recurring_transaction.id}) }}"
                   class="btn btn-warning me-2">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <a href="{{ path('app_recurring_transaction_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </div>

        <div class="row">
            <!-- Informations g√©n√©rales -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0">Informations g√©n√©rales</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Nom :</dt>
                            <dd class="col-sm-8">{{ recurring_transaction.name }}</dd>

                            <dt class="col-sm-4">Cr√©√©e le :</dt>
                            <dd class="col-sm-8">{{ recurring_transaction.createdAt|date('d/m/Y √† H:i') }}</dd>

                            <dt class="col-sm-4">Modifi√©e le :</dt>
                            <dd class="col-sm-8">{{ recurring_transaction.updatedAt|date('d/m/Y √† H:i') }}</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Statistiques -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0">Statistiques</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-4">
                                <h4 class="text-info">{{ stats.total_transactions }}</h4>
                                <small class="text-muted">Transactions</small>
                            </div>
                            <div class="col-4">
                                <h4 class="{% if stats.total_amount >= 0 %}text-success{% else %}text-danger{% endif %}">
                                    {{ stats.total_amount|number_format(2, ',', ' ') }}&nbsp;‚Ç¨
                                </h4>
                                <small class="text-muted">Total</small>
                            </div>
                            <div class="col-4">
                                <h4 class="text-secondary">{{ stats.average_amount|number_format(2, ',', ' ') }}
                                    &nbsp;‚Ç¨</h4>
                                <small class="text-muted">Moyenne</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Transactions li√©es -->
        {% if recurring_transaction.transactions|length > 0 %}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Transactions li√©es ({{ recurring_transaction.transactions|length }})</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Libell√©</th>
                                <th>Mois budg√©taire</th>
                                <th class="text-end">Montant</th>
                                <th>Tags</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for transaction in recurring_transaction.transactions %}
                                <tr>
                                    <td>
                                        <small
                                            class="text-muted">{{ transaction.transactionDate|date('d/m/Y') }}</small>
                                    </td>
                                    <td>
                                        <strong>{{ transaction.label }}</strong>
                                    </td>
                                    <td>
                                        {% if transaction.budgetMonth %}
                                            <span class="badge bg-secondary">{{ transaction.budgetMonth }}</span>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <span
                                            class="{% if transaction.amountAsFloat >= 0 %}text-success{% else %}text-danger{% endif %} fw-bold">
                                            {{ transaction.amount|number_format(2, ',', ' ') }}&nbsp;‚Ç¨
                                        </span>
                                    </td>
                                    <td>
                                        {% if transaction.tags|length > 0 %}
                                            {% for tag in transaction.tags %}
                                                {% include 'components/tag.html.twig' with {
                                                    'tag': tag,
                                                    'size': 'sm',
                                                    'class': 'me-1'
                                                } %}
                                            {% endfor %}
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}"
                                               class="btn btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}"
                                               class="btn btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-receipt fs-1 text-muted"></i>
                    </div>
                    <h4 class="text-muted">Aucune transaction li√©e</h4>
                    <p class="text-muted">Cette transaction r√©currente n'a pas encore de transactions associ√©es.</p>
                    <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Cr√©er une transaction
                    </a>
                </div>
            </div>
        {% endif %}
    </div>
{% endblock %}
