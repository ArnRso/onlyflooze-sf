{% extends 'csv_import/base_csv.html.twig' %}

{% block title %}Prévisualisation - Assistant Import CSV - {{ parent() }}{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ importmap('csv-preview') }}
{% endblock %}

{% block body %}
    <div class="container-fluid mt-4">
        <div class="row">
            <div class="col-md-12">
                <!-- En-tête avec progression -->
                <div class="mb-4">
                    <h2 class="text-center mb-3">Prévisualisation de l'import : {{ filename }}</h2>
                    <div class="progress" style="height: 8px;">
                        <div class="progress-bar bg-success" role="progressbar" style="width: 100%"></div>
                    </div>
                    <div class="d-flex justify-content-between mt-2">
                        <small class="text-muted">1. Sélection du fichier</small>
                        <small class="text-muted">2. Configuration</small>
                        <small class="text-success"><strong>3. Prévisualisation</strong></small>
                    </div>
                </div>

                <!-- Flash messages -->
                {% for label, messages in app.flashes %}
                    {% for message in messages %}
                        <div class="alert alert-{{ label == 'error' ? 'danger' : label }} alert-dismissible fade show"
                             role="alert">
                            {{ message }}
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    {% endfor %}
                {% endfor %}

                <!-- Informations sur le fichier et profil -->
                <div class="row mb-4">
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title"><i class="fas fa-file-csv"></i> Fichier</h6>
                                <p class="card-text">
                                    <strong>Nom :</strong> {{ filename }}<br>
                                    <strong>Lignes trouvées :</strong> {{ preview.total_rows }}<br>
                                    <strong>Transactions à importer :</strong> <span
                                        class="text-success fw-bold">{{ preview.valid_rows }}</span><br>
                                    {% if preview.errors is not empty %}
                                        <strong class="text-warning">Erreurs :</strong> {{ preview.errors|length }}
                                    {% endif %}
                                </p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card bg-light">
                            <div class="card-body">
                                <h6 class="card-title"><i class="fas fa-cog"></i> Profil utilisé</h6>
                                <p class="card-text">
                                    <strong>Nom :</strong> {{ profile.name }}<br>
                                    <strong>Format date :</strong> {{ profile.dateFormat }}<br>
                                    <strong>Séparateur :</strong> "{{ profile.delimiter }}"<br>
                                    <strong>Type montant
                                        :</strong> {{ profile.amountType == 'single' ? 'Unique' : 'Crédit/Débit' }}
                                </p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Erreurs si présentes -->
                {% if preview.errors is not empty %}
                    <div class="alert alert-warning">
                        <h6><i class="fas fa-exclamation-triangle"></i> Erreurs détectées</h6>
                        <ul class="mb-0">
                            {% for error in preview.errors %}
                                <li>{{ error }}</li>
                            {% endfor %}
                        </ul>
                    </div>
                {% endif %}

                <!-- Aperçu des données -->
                <div class="card mb-4">
                    <div class="card-header">
                        <h5 class="mb-0">
                            <i class="fas fa-eye"></i>
                            Aperçu des données ({{ preview.sample_data|length }} premières lignes
                            sur {{ preview.total_rows }} total)
                        </h5>
                    </div>
                    <div class="card-body">
                        {% if preview.sample_data is not empty %}
                            <div class="table-responsive">
                                <table class="table table-striped table-sm">
                                    <thead class="table-dark">
                                    <tr>
                                        <th><i class="fas fa-hashtag"></i> #</th>
                                        <th><i class="fas fa-table"></i> Données brutes</th>
                                        <th><i class="fas fa-calendar"></i> Date</th>
                                        <th><i class="fas fa-tag"></i> Libellé</th>
                                        <th><i class="fas fa-euro-sign"></i> Montant</th>
                                        <th><i class="fas fa-check-circle"></i> Statut</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for index, row in preview.sample_data %}
                                        <tr class="{{ row.status == 'error' ? 'table-danger' : '' }}">
                                            <td>{{ index + 1 }}</td>
                                            <td>
                                                <small class="text-muted">
                                                    {% for cell in row.raw_data %}
                                                        <span
                                                            class="badge bg-secondary me-1">{{ cell|length > 20 ? cell|slice(0, 20) ~ '...' : cell }}</span>
                                                    {% endfor %}
                                                </small>
                                            </td>
                                            <td>
                                                {% if row.parsed_data.date is defined %}
                                                    {{ row.parsed_data.date }}
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% set label = row.parsed_data.label|default('-') %}
                                                {{ label|length > 30 ? label|slice(0, 30) ~ '...' : label }}
                                            </td>
                                            <td>
                                                {% if row.parsed_data.amount is defined %}
                                                    <span
                                                        class="badge bg-{{ row.parsed_data.amount >= 0 ? 'success' : 'danger' }}">
                                                            {{ row.parsed_data.amount|number_format(2, ',', ' ') }}&nbsp;€
                                                        </span>
                                                {% else %}
                                                    <span class="text-muted">-</span>
                                                {% endif %}
                                            </td>
                                            <td>
                                                {% if row.status == 'ok' %}
                                                    <span class="badge bg-success">Valide</span>
                                                {% else %}
                                                    <span class="badge bg-danger">Erreur</span>
                                                {% endif %}
                                                {% if row.message %}
                                                    <br><small class="text-muted">{{ row.message }}</small>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                            </div>
                        {% else %}
                            <div class="alert alert-danger">
                                <h6><i class="fas fa-times-circle"></i> Aucune donnée valide trouvée</h6>
                                <p class="mb-0">
                                    Impossible de parser les données du fichier avec le profil sélectionné.
                                    Vérifiez la configuration de votre profil.
                                </p>
                            </div>
                        {% endif %}
                    </div>
                </div>

                <!-- Actions -->
                <div class="d-flex justify-content-between mb-4">
                    <form method="post" style="display: inline;">
                        <input type="hidden" name="action" value="back">
                        <button type="submit" class="btn btn-outline-secondary btn-lg">
                            <i class="fas fa-arrow-left"></i> Retour à la configuration
                        </button>
                    </form>

                    {% if preview.valid_rows > 0 %}
                        <form method="post" style="display: inline;">
                            <input type="hidden" name="action" value="confirm">
                            <button type="submit" class="btn btn-success btn-lg" id="confirm-import-btn"
                                    data-transaction-count="{{ preview.valid_rows }}">
                                <i class="fas fa-check-circle"></i>
                                Confirmer l'import ({{ preview.valid_rows }}
                                transaction{{ preview.valid_rows > 1 ? 's' : '' }})
                            </button>
                        </form>
                    {% else %}
                        <button type="button" class="btn btn-success btn-lg" disabled>
                            <i class="fas fa-times-circle"></i> Aucune transaction à importer
                        </button>
                    {% endif %}
                </div>

                <!-- Informations complémentaires -->
                <div class="alert alert-info">
                    <h6><i class="fas fa-info-circle"></i> Information</h6>
                    <ul class="mb-0 small">
                        <li>Les transactions en doublon seront automatiquement ignorées</li>
                        <li>Un doublon est défini par : même utilisateur, date, montant et libellé</li>
                        <li>Vous pourrez consulter le détail de l'import une fois terminé</li>
                        {% if preview.errors is not empty %}
                            <li class="text-warning">Les lignes avec erreurs seront ignorées.</li>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
