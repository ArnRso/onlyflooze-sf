{% extends 'base.html.twig' %}

{% block title %}Mes Tags - OnlyFlooze{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 text-primary">üè∑Ô∏è Mes Tags</h1>
            <a href="{{ path('app_tag_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nouveau tag
            </a>
        </div>

        <!-- Statistiques -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-primary">Total Tags</h5>
                        <h3 class="text-dark">{{ stats.total_tags }}</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-success">Tags utilis√©s</h5>
                        <h3 class="text-success">{{ stats.tags_with_transactions }}</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-warning">Tags inutilis√©s</h5>
                        <h3 class="text-warning">{{ stats.tags_without_transactions }}</h3>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card text-center h-100">
                    <div class="card-body d-flex flex-column justify-content-center">
                        <h5 class="card-title text-info">Total utilisations</h5>
                        <h3 class="text-info">{{ stats.total_transactions }}</h3>
                    </div>
                </div>
            </div>
        </div>

        <!-- Liste des tags -->
        {% if tags|length > 0 %}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Liste des tags</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                            <tr>
                                <th>Tag</th>
                                <th>Couleur</th>
                                <th class="text-center">Transactions</th>
                                <th>Cr√©√© le</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for item in tags %}
                                {% set tag = item[0] %}
                                {% set transactionCount = item.transactionCount %}
                                <tr>
                                    <td>
                                        {% include 'components/tag.html.twig' with {'tag': tag} %}
                                    </td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="rounded me-2"
                                                 style="width: 20px; height: 20px; background-color: {{ tag.color }};"></div>
                                            <small class="text-muted">{{ tag.color }}</small>
                                        </div>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge bg-secondary">{{ transactionCount }}</span>
                                    </td>
                                    <td>
                                        <small class="text-muted">{{ tag.createdAt|date('d/m/Y') }}</small>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('app_tag_show', {'id': tag.id}) }}"
                                               class="btn btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_tag_edit', {'id': tag.id}) }}"
                                               class="btn btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="btn btn-outline-danger" data-bs-toggle="modal"
                                                    data-bs-target="#deleteModal{{ tag.id }}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>

                                        <!-- Modal de suppression -->
                                        <div class="modal fade" id="deleteModal{{ tag.id }}" tabindex="-1">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirmer la suppression</h5>
                                                        <button type="button" class="btn-close"
                                                                data-bs-dismiss="modal"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>√ätes-vous s√ªr de vouloir supprimer ce tag ?</p>
                                                        <p>{% include 'components/tag.html.twig' with {'tag': tag} %}</p>
                                                        {% if transactionCount > 0 %}
                                                            <div class="alert alert-warning">
                                                                <strong>Attention :</strong> Ce tag est utilis√©
                                                                dans {{ transactionCount }} transaction(s).
                                                                Il sera retir√© de toutes ces transactions.
                                                            </div>
                                                        {% endif %}
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary"
                                                                data-bs-dismiss="modal">Annuler
                                                        </button>
                                                        <form method="post"
                                                              action="{{ path('app_tag_delete', {'id': tag.id}) }}"
                                                              style="display: inline;">
                                                            <input type="hidden" name="_token"
                                                                   value="{{ csrf_token('delete' ~ tag.id) }}">
                                                            <button type="submit" class="btn btn-danger">Supprimer
                                                            </button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="text-center py-5">
                <div class="mb-4">
                    <i class="fas fa-tags fs-1 text-muted"></i>
                </div>
                <h4 class="text-muted">Aucun tag</h4>
                <p class="text-muted">Cr√©ez votre premier tag pour organiser vos transactions !</p>
                <a href="{{ path('app_tag_new') }}" class="btn btn-primary">
                    <i class="fas fa-plus"></i> Cr√©er un tag
                </a>
            </div>
        {% endif %}
    </div>
{% endblock %}
