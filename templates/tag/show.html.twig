{% extends 'base.html.twig' %}

{% block title %}{{ tag.name }} - OnlyFlooze{% endblock %}

{% block body %}
    <div class="container py-4">
        <div class="d-flex justify-content-between align-items-center mb-4">
            <h1 class="h3 text-primary">
                üè∑Ô∏è {% include 'components/tag.html.twig' with {'tag': tag} %}
            </h1>
            <div>
                <a href="{{ path('app_tag_edit', {'id': tag.id}) }}"
                   class="btn btn-warning me-2">
                    <i class="fas fa-edit"></i> Modifier
                </a>
                <a href="{{ path('app_tag_index') }}" class="btn btn-secondary">
                    <i class="fas fa-arrow-left"></i> Retour
                </a>
            </div>
        </div>

        <div class="row">
            <!-- Informations g√©n√©rales -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0">Informations g√©n√©rales</h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-4">Nom :</dt>
                            <dd class="col-sm-8">{{ tag.name }}</dd>

                            <dt class="col-sm-4">Couleur :</dt>
                            <dd class="col-sm-8">
                                <div class="d-flex align-items-center">
                                    <div class="rounded me-2"
                                         style="width: 20px; height: 20px; background-color: {{ tag.color }};"></div>
                                    <code>{{ tag.color }}</code>
                                </div>
                            </dd>

                            <dt class="col-sm-4">Cr√©√© le :</dt>
                            <dd class="col-sm-8">{{ tag.createdAt|date('d/m/Y √† H:i') }}</dd>

                            <dt class="col-sm-4">Modifi√© le :</dt>
                            <dd class="col-sm-8">{{ tag.updatedAt|date('d/m/Y √† H:i') }}</dd>
                        </dl>
                    </div>
                </div>
            </div>

            <!-- Statistiques -->
            <div class="col-md-6 mb-4">
                <div class="card h-100">
                    <div class="card-header">
                        <h5 class="mb-0">Statistiques</h5>
                    </div>
                    <div class="card-body">
                        <div class="row text-center">
                            <div class="col-3">
                                <h4 class="text-info">{{ stats.total_transactions }}</h4>
                                <small class="text-muted">Transactions</small>
                            </div>
                            <div class="col-3">
                                <h4 class="{% if stats.total_amount >= 0 %}text-success{% else %}text-danger{% endif %}">
                                    {{ stats.total_amount|number_format(2, ',', ' ') }}&nbsp;‚Ç¨
                                </h4>
                                <small class="text-muted">Total</small>
                            </div>
                            <div class="col-3">
                                <h4 class="text-secondary">{{ stats.average_amount|number_format(2, ',', ' ') }}
                                    &nbsp;‚Ç¨</h4>
                                <small class="text-muted">Moyenne</small>
                            </div>
                            <div class="col-3">
                                <h4 class="text-warning">{{ stats.average_per_month|number_format(2, ',', ' ') }}
                                    &nbsp;‚Ç¨</h4>
                                <small class="text-muted">Moy./mois</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Graphique des totaux mensuels -->
        {% if monthly_totals|length > 0 %}
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">üìä √âvolution des totaux par mois budg√©taire</h5>
                </div>
                <div class="card-body">
                    <canvas id="monthlyTotalsChart" height="150"></canvas>
                </div>
            </div>
        {% endif %}

        <!-- Transactions li√©es -->
        {% if tag.transactions|length > 0 %}
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Transactions li√©es ({{ tag.transactions|length }})</h5>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-hover mb-0">
                            <thead class="table-light">
                            <tr>
                                <th>Date</th>
                                <th>Libell√©</th>
                                <th>Mois budg√©taire</th>
                                <th class="text-end">Montant</th>
                                <th>Transaction r√©currente</th>
                                <th class="text-center">Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for transaction in tag.transactions %}
                                <tr>
                                    <td>
                                        <small
                                            class="text-muted">{{ transaction.transactionDate|date('d/m/Y') }}</small>
                                    </td>
                                    <td>
                                        <strong>{{ transaction.label }}</strong>
                                    </td>
                                    <td>
                                        {% if transaction.budgetMonth %}
                                            <span class="badge bg-secondary">{{ transaction.budgetMonth }}</span>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td class="text-end">
                                        <span
                                            class="{% if transaction.amountAsFloat >= 0 %}text-success{% else %}text-danger{% endif %} fw-bold">
                                            {{ transaction.amount|number_format(2, ',', ' ') }}&nbsp;‚Ç¨
                                        </span>
                                    </td>
                                    <td>
                                        {% if transaction.recurringTransaction %}
                                            <span class="badge bg-primary text-white">
                                                üîÑ {{ transaction.recurringTransaction.name }}
                                            </span>
                                        {% else %}
                                            <small class="text-muted">-</small>
                                        {% endif %}
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm">
                                            <a href="{{ path('app_transaction_show', {'id': transaction.id}) }}"
                                               class="btn btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_transaction_edit', {'id': transaction.id}) }}"
                                               class="btn btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="card">
                <div class="card-body text-center py-5">
                    <div class="mb-4">
                        <i class="fas fa-receipt fs-1 text-muted"></i>
                    </div>
                    <h4 class="text-muted">Aucune transaction li√©e</h4>
                    <p class="text-muted">Ce tag n'a pas encore de transactions associ√©es.</p>
                    <a href="{{ path('app_transaction_new') }}" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Cr√©er une transaction
                    </a>
                </div>
            </div>
        {% endif %}
    </div>

    <!-- Modal de suppression -->
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmer la suppression</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>√ätes-vous s√ªr de vouloir supprimer ce tag ?</p>
                    <div class="alert alert-warning">
                        {% include 'components/tag.html.twig' with {'tag': tag} %}
                    </div>
                    {% if tag.transactions|length > 0 %}
                        <div class="alert alert-danger">
                            <strong>Attention :</strong> Ce tag est utilis√© dans {{ tag.transactions|length }}
                            transaction(s).
                            Il sera retir√© de toutes ces transactions.
                        </div>
                    {% endif %}
                    <p class="text-danger"><strong>Cette action est irr√©versible.</strong></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                    <form method="post" action="{{ path('app_tag_delete', {'id': tag.id}) }}" style="display: inline;">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ tag.id) }}">
                        <button type="submit" class="btn btn-danger">Supprimer d√©finitivement</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {% if monthly_totals|length > 0 %}
        <script>
            window.monthlyTotalsData = {{ monthly_totals|json_encode|raw }};
        </script>
        {{ importmap('js/recurring-transactions-chart.js') }}
    {% endif %}
{% endblock %}